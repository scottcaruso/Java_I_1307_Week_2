/*This class is exclusively for creating the display that shows the statistics at the bottom of the screen when the user clicks the
 *appropriate button.
 */
public class CreateDisplay extends GridLayout {
	
	TextView date;
	TextView opponent;
	TextView atbats;
	TextView hits;
	TextView doubles;
	TextView triples;
	TextView homeruns;
	TextView rbi;
	Context context;
	
	
	public CreateDisplay(Context context)
